mixin header(addLinksButton)

  header.header
    .header__left
      .header__logo 
        a(href="index.html").link_button
    .header__right
      +header__phone({href:"tel:+74956627677", title:"+7 (495) 662 76 77"})
      .header__separator
      include ../langs/langs.pug
      if addLinksButton
        +links-button
        //- include ../links-button/links-button.pug
    .header__menu


mixin header__phone(content,params)
  a(href=content.href).header__phone!=content.title