
mixin inner-part-content(content, params)
  .inner-part-content&attributes(attributes)
    h2.inner-part__title!=content.title 
    .inner-part-column!=content.text

mixin inner-part(content, params)
  .inner-part&attributes(attributes)
    block

mixin inner-part-template(content,params)
  script( id="template-main-content" type="text/x-handlebars-template")
    .inner-part__image
      img(src="{{image}}")
    .inner-part-content
      h2.inner-part__title {{{title}}}
      .inner-part-column {{{text}}}
  block
